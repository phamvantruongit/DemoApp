<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:padding="10dp"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Thông tin về sản phẩm"
        android:textStyle="bold|italic" />

    <TextView
        android:textColor="@color/black"
        android:padding="7dp"
        android:id="@+id/tv_tensp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ten san pham" />

    <TextView
        android:textColor="@color/black"
        android:padding="7dp"
        android:id="@+id/tv_soluong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="So luong" />

    <TextView
        android:textColor="@color/black"
        android:padding="7dp"
        android:id="@+id/tv_gia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gia ban" />

    <TextView
        android:visibility="gone"
        android:textColor="@color/black"
        android:padding="7dp"
        android:id="@+id/tv_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Size:S" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:id="@+id/tv_qrcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Read QRCode" />
        <TextView
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:id="@+id/tv_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Close QRCode" />
    </LinearLayout>
</LinearLayout>